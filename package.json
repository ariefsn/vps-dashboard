{
	"name": "vps-dashboard",
	"private": true,
	"version": "1.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky || true",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run && bun run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"codegen": "graphql-codegen --config codegen.ts",
		"add:components": "bunx shadcn-svelte@latest add ",
		"docker": "docker buildx build --platform linux/amd64,linux/arm64 -t ${IMAGE_NAME:-ariefsn/vps-dashboard}:${VERSION:-latest} -t ${IMAGE_NAME:-ariefsn/vps-dashboard}:latest --push ."
	},
